<h2>new comment for <%= @soupkitchen.name %> </h2>

<%= form_for([@soupkitchen, @comment]) do |f| %>

<h4>(You must be logged in to add a comment.)</h4>


	<%= f.label "Title of Comment" %>
	<%= f.text_field :title %>
	<br>
	<%= f.label "Comment" %>
	<%= f.text_field :content %>
	<br>
	Add Rating (from 1 - 5)
	<br>
		

	<%= f.hidden_field :soup_kitchen_id, value: @soupkitchen.id %>

	<%= f.submit %>
<% end %>


